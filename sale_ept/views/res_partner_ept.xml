<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
            <record id="view_partner_tree" model="ir.ui.view">
                <field name="name">partner.tree</field>
                <field name="model">res.partner.ept</field>
                <field name="arch" type="xml">
                    <tree name="Partner Data">
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="website"/>
                        <field name="city"/>
                        <field name="state"/>
                        <field name="country"/>
                    </tree>
                </field>
            </record>

        <record id="view_partner_form" model="ir.ui.view">
                <field name="name">partner.form</field>
                <field name="model">res.partner.ept</field>
                <field name="arch" type="xml">
                    <form name="Partner">
                        <sheet>
                            <group>
                                <group>
                                    <field name="photo" widget="image"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="website"/>
                                    <field name="parent_id"/>
                                </group>
                                <group>
                                    <field name="street1"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="state"/>
                                    <field name="country"/>
                                    <field name="zipcode"/>
                                    <field name="address_type" attrs="{'invisible': [('parent_id','=', False)]}"/>
                                </group>
                            </group>
                            <notebook>
                                 <page string="Contacts">
                                    <field name="child_ids" mode="kanban">
                                    <kanban string="child_ids Kanban">
                                        <field name="parent_id"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                               <div class="oe_module_vignette">
                                                    <div t-attf-class="oe_kanban_global_click">
                                                        <div class="oe_kanban_details">
                                                            <div class="row">
                                                                <div class="col-md-3">
                                                                    <div class="o_kanban_image">
                                                                            <img t-att-src="kanban_image('res.partner.ept','photo',record.id.raw_value)"
                                                                                 class="oe_avatar oe_kanban_avatar_smallbox"/>
<!--                                                                        <field name="photo" widget="image"/>-->

                                                                    </div>
                                                                </div>
                                                                <div class="col-md-5">
                                                                    <h4>
                                                                        <a type="open">
                                                                            <field name="name"/>
                                                                        </a>
                                                                    </h4>
                                                                    <field name="website"/>
                                                                    <field name="phone"/>
                                                                    <field name="email" widget='email'/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                    </form>
                </field>
        </record>

        <record id="view_partner_search" model="ir.ui.view">
            <field name="name">partner.tree</field>
            <field name="model">res.partner.ept</field>
            <field name="arch" type="xml">
                <search name="Partner search">
                    <field name="name"/>
                    <field name="website"/>
                    <field name="country"/>
                    <field name="state"/>
                    <filter name="filter_active" string="Active" domain="[('active','=',1)]"/>
                    <filter name="filter_inactive" domain="[('active','=',0)]" string="Inactive"/>
                    <group expand="0" string="Group By">
                        <filter name="filter_city" string="City" domain="[]" context="{'group_by':'city'}"/>
                        <filter name="filter_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                        <filter name="filter_country" string="Country" domain="[]" context="{'group_by':'country'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_partner">
            <field name="name">Customer</field>
            <field name="res_model">res.partner.ept</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_partner_search"/>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="help" type="html">
                <p>Here you can enter the details of the customer</p>
            </field>
        </record>

        <menuitem id="menu_partner_sub" parent="menu_product_sub" name="Customer" action="action_partner"/>
    </data>
</openerp>